    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",                              
    "outDir": "./dist",   
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,    
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
